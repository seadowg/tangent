<% articles.each_slice(3).each do |row| %>
  <div class="row tile-row">
    <% row.each do |article| %>
      <div class="col-md-4">
        <div class="tile">
          <h4>
            <a href="/articles/<%= article.id %>" class="title">
              <%= article.title %>
            </a>
          </h4>
          
          <% if article.image_url %>
            <div class="image">
                <img class="img-responsive" src="<%= article.image_url %>">
            </div>
          <% end %>

          <div class="summary">
            <%= article.summary %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
