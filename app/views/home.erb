<div class="page-header">
  <h2>The Tangent</h2>
</div>
<% articles.each_slice(3).each do |row| %>
  <div class="row">
    <% row.each do |article| %>
      <div class="col-lg-4">
        <h3>
          <a href="/articles/<%= article.id %>">
            <%= article.title %>
          </a>
        </h3>
        <div>
          <%= article.summary %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>