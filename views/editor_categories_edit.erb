<div class="page-header">
  <h3>Edit Category</h3>
</div>

<form role="form" accept-charset="UTF-8" action="/editor/categories/<%= category[:id] %>" method="post">
  <input type="hidden" name="_method" value="put" />
  
  <div class="form-group">
    <label for="category_name">Name</label>
    <input type="text" class="form-control" id="category_name" name="category[name]" value="<%= category[:name] %>">
  </div>
  
  <button type="submit" class="btn btn-default">Save</button>
</form>