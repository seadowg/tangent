<div class="page-header">
  <h3>Edit Category</h3>
</div>

<form role="form" accept-charset="UTF-8" action="/editor/categories/<%= category[:id] %>" method="post">
  <input type="hidden" name="_method" value="put" />
  
  <%= erb :category_fields, :locals => { :category => category } %>
  
  <button type="submit" class="btn btn-default">Save</button>
</form>