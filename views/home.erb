<div class="page-header">
  <p class="pull-right"><%= date.strftime("%e %B %Y") %></p>
  <h2>The Tangent</h2>
</div>

<% categories.each do |category| %>
  <h3><%= category.name %></h3>
  <% category.articles.each do |article| %>
      <h4>
        <a href="/articles/<%= article.id %>">
          <%= article.title %>
        </a> <small><%= article.author %></small></h4>
  <% end %>
<% end %>