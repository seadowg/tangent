<form accept-charset="UTF-8" action="/articles" method="post">
  <p>
    <label for="article_author">Author</label>
    <input type="text" id="article_author" name="article[author]">
  </p>
  <p>
    <label for="article_title">Title</label>
    <input type="text" id="article_title" name="article[title]">
  </p>
  <p>
    <label for="article_content">Content</label>
    <textarea id="article_content" name="article[content]" rows="20" cols="50"></textarea> 
  </p>
  
  <p>
    <input type="submit" value="Save">
  </p>
</form> 